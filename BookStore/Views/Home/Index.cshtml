@{
    Layout = null;
    ViewBag.Title = "Home Page";
}

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Книжный магазин</title>
</head>
<body>
    <div>
        <h3>Распродажа книг</h3>
        <table>
            <tr>
                <td><p>Название книги</p></td>
                <td><p>Автор</p></td>
                <td><p>Цена</p></td>
            </tr>
            @foreach(var b in ViewBag.Books) {
        <tr>
            <td><p>@b.BookName</p></td>
            <td><p>@b.BookAuthor</p></td>
            <td><p>@b.BookPrice</p></td>
            <td><p><a href="/Home/Buy/@b.BookId">Купить</a></p></td>
        </tr>
            }
        </table>
    </div>
</body>