
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Покупка</title>
</head>
<body>
    <div> 
        <h3>Форма оформления покупки</h3>
        <form method="post" action="">
            <input type="hidden" name="BookId" value="@ViewBag.id" />
            <table>
                <tr>
                    <td><p>Введите своё имя</p></td>
                    <td><input type="text" name="PurchasePerson" /></td>
                </tr>
                <tr>
                    <td><p>Введите адрес:</p></td>
                    <td><input type="text" name="PurchaseAddress" /></td>
                </tr>
                <tr>
                    <td><input type="submit" value="Отправить" /></td><td></td>
                </tr>
            </table>
        </form>
    </div>
</body>
</html>
